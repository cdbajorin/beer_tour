<!DOCTYPE html>
<html>
<head>
  <title>BeerTour</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>Beer Tour</h1>
  <nav>
    <div id="user_nav">
      <% if current_user %>
        <%= link_to "Profile", "/users/#{current_user.username}" %>
        <%= link_to "Search tours", tours_search_path %>
        <%= link_to "New tour", breweries_search_path %>
        <div class="login">
          Logged in as <%= current_user.username %>.
          <%= link_to "Log out", users_logout_path %>
        </div>
      <% else %>
        <%= link_to "Sign up", users_new_path %> or
        <%= link_to "Log in", users_login_path %>
      <% end %>
    </div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
  </nav>

<%= yield %>

</body>
</html>
